@model AgendamentoAtendimentoViewMOD
@{
    ViewBag.Title = "Atendimentos Espontâneos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-3">
        <div class="col-12">
            <h3 class="text-secondary">
                <i class="fas fa-male me-2"></i>Atendimentos Espontâneos
            </h3>
        </div>
    </div>
    <form asp-action="Espontaneo" method="get" class="row g-3 align-items-end mb-4">
        <div class="col-md-2 text-start">
            <a class="btn btn-secondary text-white" href="@Url.Action("RegistrarAtendimentoEspontaneo", "Atendimento")"><span class="fas fa-user-plus me-2"></span>Registrar</a>
        </div>
        <div class="col-md-5">
            <label for="filtro" class="form-label">Nome ou CPF</label>
            <input type="text" name="filtro" id="filtro" class="form-control" placeholder="Buscar por nome ou CPF" value="@ViewBag.Filtro" />
        </div>
        <div class="col-md-3">
            <label for="dtAtendimento" class="form-label">Data de Atendimento</label>
            <input type="date" name="dtAtendimento" id="dtAtendimento" class="form-control" value="@ViewBag.DataAtendimento" />
        </div>
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-search me-1"></i> Buscar
            </button>
            <a href="@Url.Action("Espontaneo")" class="btn btn-outline-secondary w-100">
                <i class="fas fa-times me-1"></i> Limpar
            </a>
        </div>
    </form>
    <div class="mb-2">
        <small class="text-muted">Total de atendimentos espontâneos: <strong>@Model.QtdTotalDeRegistros</strong></small>
    </div>
    <div class="card shadow-sm">
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover text-nowrap">
                <thead class="table-light">
                    <tr>
                        <th class="bg-success">Data de Atendimento</th>
                        <th class="bg-success">Nome</th>
                        <th class="bg-success">CPF</th>
                        <th class="bg-success">Intercâmbio</th>
                        <th class="bg-success">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaAtendimentoPaginada != null && Model.ListaAtendimentoPaginada.Count > 0)
                    {
                        foreach (var atendimento in Model.ListaAtendimentoPaginada)
                        {
                              <tr>
                                  <td>@atendimento.DtPreenchimento.ToString("dd/MM/yyyy HH:mm")</td>
                                  <td>@atendimento.NoBeneficiario</td>
                                  <td>@(atendimento.NrCpf != null ? atendimento.NrCpf : "N/I")</td>
                                  <td>
                                      @Html.Raw(atendimento.SnIntercambio == "S"
                                                                  ? "<span class='text-success fw-bold'>Sim</span>"
                                                                  : "<span class='text-danger fw-bold'>Não</span>")
                                  </td>
                                  <td class="text-center">
                                      <a class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalConsultaAtendimentoEspontaneo_@atendimento.CdAtendimento" title="Consultar atendimento">
                                          <i class="fas fa-search"></i>
                                      </a>
                                  </td>
                              </tr>
                              @await Html.PartialAsync("_PartialModalConsultaAtendimentoEspontaneo", atendimento)
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle me-2"></i>Nenhum atendimento encontrado.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item  @(i == Model.PaginaAtual ? "active" : "")">
                <a class="page-link bg-secondary border-0" href="@Url.Action("Espontaneo", new { pagina = i, filtro = ViewBag.Filtro, dtAtendimento = ViewBag.DataAtendimento })">@i</a>
            </li>
        }
    </ul>
</nav>

@model AgendamentoAtendimentoViewMOD

@{
    ViewBag.Title = "Atendimentos Pendentes";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var viewDataMotivoAusencia = new ViewDataDictionary(ViewData) { ["listaMotivoAusencia"] = ViewBag.listaMotivoAusencia };
    var viewDataHumor = new ViewDataDictionary(ViewData) { ["listaHumor"] = ViewBag.listaHumor };
}

<div class="container-fluid px-4">
    <div class="row mb-3">
        <div class="col-12">
            <h3 class="text-yellow">
                <i class="fas fa-hourglass-half me-2"></i>Atendimentos Pendentes
            </h3>
        </div>
    </div>

    <form asp-action="Pendente" method="get" class="row g-3 align-items-end mb-4">
        <div class="col-md-7 text-start">
            <label for="filtro" class="form-label">Nome, CPF ou Protocolo</label>
            <input type="text" name="filtro" id="filtro" class="form-control" placeholder="Buscar por nome, CPF ou protocolo" value="@ViewBag.Filtro" />
        </div>
        <div class="col-md-3">
            <label for="dtAgendamento" class="form-label">Data de Agendamento</label>
            <input type="date" name="dtAgendamento" id="dtAgendamento" class="form-control" value="@ViewBag.DataAgendamento" />
        </div>
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-search me-1"></i> Buscar
            </button>
            <a href="@Url.Action("Pendente")" class="btn btn-outline-secondary w-100">
                <i class="fas fa-times me-1"></i> Limpar
            </a>
        </div>
    </form>

    <div class="mb-2">
        <small class="text-muted">Total de atendimentos pendentes: <strong>@Model.QtdTotalDeRegistros</strong></small>
    </div>

    <div class="card shadow-sm">
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover text-nowrap">
                <thead class="table-light">
                    <tr>
                        <th class="bg-success">Protocolo</th>
                        <th class="bg-success">Nome</th>
                        <th class="bg-success">CPF</th>
                        <th class="bg-success">Data</th>
                        <th class="bg-success">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaAgendamentoPaginada != null && Model.ListaAgendamentoPaginada.Count > 0)
                    {
                        foreach (var agendamento in Model.ListaAgendamentoPaginada)
                        {
                            <tr>
                                <td>@agendamento.NrProtocoloAgendamento</td>
                                <td>@agendamento.NoBeneficiario</td>
                                <td>@agendamento.NrCpf</td>
                                <td>@agendamento.DtDataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a data-bs-toggle="modal" data-bs-target="#modalConsultaAgendamento_@agendamento.CdAgendamento" class="btn btn-sm btn-outline-secondary me-1" title="Consultar">
                                        <i class="fas fa-search fa-lg"></i>
                                    </a>
                                    <a data-bs-toggle="modal" data-bs-target="#modalRegistrar-@agendamento.CdAgendamento" class="btn btn-sm btn-outline-success me-1" title="Registrar">
                                        <i class="fas fa-check fa-lg"></i>
                                    </a>
                                    <a data-bs-toggle="modal" data-bs-target="#modalCancelar-@agendamento.CdAgendamento" class="btn btn-sm btn-outline-danger" title="Cancelar">
                                        <i class="fas fa-times fa-lg"></i>
                                    </a>
                                </td>
                            </tr>

                            @await Html.PartialAsync("_PartialModalRegistrarAtendimento", agendamento, viewDataHumor)
                            @await Html.PartialAsync("_PartialModalCancelarAtendimento", agendamento, viewDataMotivoAusencia)
                            @await Html.PartialAsync("_PartialModalConsultaAgendamento", agendamento)
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle me-2"></i>Nenhum agendamento encontrado.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                    <a class="page-link bg-secondary border-0" href="@Url.Action("Pendente", new { pagina = i, filtro = ViewBag.Filtro })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

@model AgendamentoAtendimentoViewMOD
@{
    ViewBag.Title = "Atendimentos Realizados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-3">
        <div class="col-12">
            <h3 class="text-primary">
                <i class="fas fa-calendar-check me-2"></i>Atendimentos Realizados
            </h3>
        </div>
    </div>
    <form asp-action="Realizado" method="get" class="row g-3 align-items-end mb-4">
        <div class="col-md-7 text-start">
            <label for="filtro" class="form-label">Nome, CPF ou Protocolo</label>
            <input type="text" name="filtro" class="form-control" placeholder="Buscar por nome, CPF ou protocolo" value="@ViewBag.Filtro" />
        </div>
        <div class="col-md-3">
            <label for="dtAgendamento" class="form-label">Data de Agendamento</label>
            <input type="date" name="dtAgendamento" id="dtAgendamento" class="form-control" value="@ViewBag.DataAgendamento" />
        </div>
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-search me-1"></i> Buscar
            </button>
            <a href="@Url.Action("Realizado")" class="btn btn-outline-secondary w-100">
                <i class="fas fa-times me-1"></i> Limpar
            </a>
        </div>
    </form>
    <div class="mb-2">
        <small class="text-muted">Total de atendimentos realizados: <strong>@Model.QtdTotalDeRegistros</strong></small>
    </div>
    <div class="card shadow-sm">
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover text-nowrap">
                <thead>
                    <tr>
                        <th class="bg-success">Protocolo</th>
                        <th class="bg-success">Nome</th>
                        <th class="bg-success">CPF</th>
                        <th class="bg-success">Data Agendamento</th>
                        <th class="bg-success">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaAtendimentoPaginada != null && Model.ListaAtendimentoPaginada.Count > 0)
                    {
                        foreach (var atendimento in Model.ListaAtendimentoPaginada)
                        {
                            <tr>
                                <td>@atendimento.NrProtocoloAgendamento<br /></td>
                                <td>@atendimento.NoBeneficiario</td>
                                <td>@atendimento.DtDataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@atendimento.NrCpf</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalConsultaAtendimentoRealizado_@atendimento.CdAgendamento" title="Consultar atendimento">
                                        <i class="fas fa-search fa-lg"></i>
                                    </a>
                                </td>
                            </tr>
                            @await Html.PartialAsync("_PartialModalConsultaAtendimentoRealizado", atendimento)
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle me-2"></i>Nenhum atendimento encontrado.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item  @(i == Model.PaginaAtual ? "active" : "")">
                <a class="page-link bg-secondary border-0" href="@Url.Action("Realizado", new { pagina = i, filtro = ViewBag.Filtro, dtAgendamento = ViewBag.DataAgendamento })">@i</a>
            </li>
        }
    </ul>
</nav>

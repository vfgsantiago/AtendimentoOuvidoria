@model MotivoAusenciaAtendimentoMOD
@{
    ViewData["Title"] = "Cadastrar Motivo de Ausência";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-plus-circle fa-2x text-yellow me-2"></i>
        <h2 class="mb-0">Cadastrar Motivo de Ausência</h2>
    </div>

    @using (Html.BeginForm("Cadastrar", "MotivoAusenciaAtendimento", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.SnAtivo)

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.NoMotivo, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.NoMotivo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NoMotivo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.TxDescricaoMotivo, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.TxDescricaoMotivo, new { @class = "form-control", rows = 4 })
                        @Html.ValidationMessageFor(m => m.TxDescricaoMotivo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6 text-start">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-chevron-left me-1"></i> Cancelar
                        </a>
                    </div>
                    <div class="col-6 text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i> Cadastrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

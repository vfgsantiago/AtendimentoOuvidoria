@model List<MotivoAusenciaAtendimentoMOD>
@{
    ViewData["Title"] = "Motivos de Ausência";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x text-yellow me-2"></i>
            <h2 class="mb-0">Motivos de Ausência</h2>
        </div>
        <a href="@Url.Action("Cadastrar", "MotivoAusenciaAtendimento")" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Novo Motivo
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%;" class="bg-success">Código</th>
                        <th style="width: 20%;" class="bg-success">Motivo</th>
                        <th class="bg-success">Descrição</th>
                        <th class="text-center bg-success" style="width: 20%;">Status</th>
                        <th class="text-center bg-success" style="width: 15%;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var motivo in Model)
                    {
                        var isAtivo = motivo.SnAtivo == "S";
                        <tr>
                            <td>@motivo.CdMotivoAusencia</td>
                            <td>@motivo.NoMotivo</td>
                            <td>@motivo.TxDescricaoMotivo</td>
                            <td class="text-center">
                                <div class="row">
                                    <div class="col-6 text-end">
                                        <span class="badge rounded-pill @(isAtivo ? "bg-success" : "bg-danger")">
                                            @(isAtivo ? "Ativo" : "Inativo")
                                        </span>
                                    </div>
                                    <div class="col-6 text-start">
                                        <div class="form-check form-switch d-inline-block ms-2">
                                            <input class="form-check-input" type="checkbox"
                                                   onchange="enviarAlteracao(@motivo.CdMotivoAusencia, this)"
                                            @(isAtivo ? "checked" : "") title="Alterar status" />
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Editar", new { cdMotivoAusencia = motivo.CdMotivoAusencia })"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i> Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function enviarAlteracao(cdMotivoAusencia, checkbox) {
        $.ajax({
            url: '@Url.Action("AlterarStatus", "MotivoAusenciaAtendimento")',
            type: 'POST',
            data: { cdMotivoAusencia: cdMotivoAusencia },
            success: function () {
                const badge = $(checkbox).closest('.row').find('.badge');
                if (checkbox.checked) {
                    badge.removeClass('bg-danger').addClass('bg-success').text('Ativo');
                } else {
                    badge.removeClass('bg-success').addClass('bg-danger').text('Inativo');
                }
            },
            error: function () {
                alert('Erro ao alterar status.');
                checkbox.checked = !checkbox.checked;
            }
        });
    }
</script>

